<Window x:Class="RestaurantWindowsPF.UserControls.AddType"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RestaurantWindowsPF.UserControls"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="AddType" Height="600" Width="800">
    <Canvas Background="#FF22243D">
        <Label Content="Add new type" Canvas.Left="304" Canvas.Top="51" FontSize="28" FontWeight="Bold" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Top"/>

        <!-- Type Name -->
        <Label Content="Name:" Canvas.Left="248" Canvas.Top="245" FontSize="18" Foreground="White"/>
        <TextBox x:Name="nameTextBox" Background="#FF22243D" FontSize="18" Canvas.Left="400" Canvas.Top="249" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150"/>

        <Button Content="Create" x:Name="createButton" Canvas.Left="317" Canvas.Top="420" Width="187" Height="61" HorizontalAlignment="Left" VerticalAlignment="Top"
            Background="#FF5DADEC" Foreground="White" FontWeight="Bold" FontSize="16" BorderBrush="White" BorderThickness="1" Click="createButton_Click"/>
        <Label x:Name="errorLable" Content="" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Canvas.Left="304" FontSize="16" Foreground="red" Canvas.Top="341" Width="200" Height="28"/>
    </Canvas>
</Window>
