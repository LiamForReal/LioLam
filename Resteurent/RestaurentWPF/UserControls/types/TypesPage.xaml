<UserControl x:Class="RestaurantWindowsPF.UserControls.TypesPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RestaurantWindowsPF.UserControls"
             mc:Ignorable="d" 
             Width="1100" Height="750" Background="#FF22243D">
    <Canvas>
        <TextBlock Text="Types" Canvas.Left="100" Canvas.Top="10" FontSize="30" Foreground="White" FontWeight="Bold" />

        <ListView x:Name="listView" Background="#5DADEC" Height="550" Width="900" Canvas.Left="100" Canvas.Top="50"
                  BorderBrush="White" BorderThickness="1">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Background="#E6F2FF" CornerRadius="10" Margin="5" Padding="10">
                        <StackPanel Orientation="Horizontal" Width="860">
                            <Label x:Name="dishName" Content="{Binding TypeName}" FontSize="22" FontWeight="SemiBold" VerticalAlignment="Center" Margin="20,0"/>

                            <Button x:Name="updateType" Content="Update" Tag="{Binding Id}" Width="70" Height="40" Margin="60,0" Click="updateType_Click"
                                    HorizontalAlignment="Center" VerticalAlignment="Center" Background="#FF5DADEC" Foreground="White" FontWeight="Bold" FontSize="16" BorderBrush="White" BorderThickness="1"/>
                            
                            <Button x:Name="deleteType" Content="Delete" Tag="{Binding Id}" Width="70" Height="40" Margin="10,0" Click="deleteType_Click"
                                    HorizontalAlignment="Center" VerticalAlignment="Center" Background="#FF5DADEC" Foreground="White" FontWeight="Bold" FontSize="16" BorderBrush="White" BorderThickness="1"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button Content="Add new type" x:Name="addNewType" Canvas.Left="450" Canvas.Top="619" Height="50" Width="200"
                HorizontalAlignment="Center" VerticalAlignment="Center"
                Background="#FF5DADEC" Foreground="White" FontWeight="Bold" FontSize="16" BorderBrush="White" BorderThickness="1" Click="addNewType_Click"/>
    </Canvas>
</UserControl>
