<Window x:Class="RestaurantWindowsPF.UserControls.UpdateType"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RestaurantWindowsPF.UserControls"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="UpdateType" Height="600" Width="800">
    <Canvas Background="#FF22243D">
        <Label Content="Update type" Canvas.Left="314" Canvas.Top="80" FontSize="28" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Top"/>

        <!-- Type Name -->
        <Label Content="Name:" Canvas.Left="251" Canvas.Top="268" FontSize="18" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox x:Name="nameTextBox" Background="#FF22243D" Text="{Binding TypeName}" FontSize="18" Canvas.Left="400" Canvas.Top="266" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Top" Width="150"/>

        <Button Content="Update" x:Name="updateButton" Canvas.Left="314" Canvas.Top="426" Width="192" Height="65" HorizontalAlignment="Left" VerticalAlignment="Top"
            Background="#FF5DADEC" Foreground="White" FontWeight="Bold" FontSize="16" BorderBrush="White" BorderThickness="1" Click="updateButton_Click"/>
        <Label x:Name="errorLable" Content="" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Canvas.Left="300" FontSize="16" Foreground="red" Canvas.Top="355" Width="200" Height="28"/>
    </Canvas>
</Window>
