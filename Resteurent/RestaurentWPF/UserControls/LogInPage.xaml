<UserControl x:Class="RestaurantWPF.UserControls.LogInPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RestaurantWPF.UserControls"
             mc:Ignorable="d" 
             Width="1100" Height="750" Background="#FF22243D">
    <Canvas >
        <Label Content="Log In" Canvas.Left="473" Canvas.Top="110" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="50" />
        <Label Content="User Name:" x:Name="userName" Canvas.Left="335" Canvas.Top="253" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center" Height="68"/>
        <TextBox Canvas.Left="581" x:Name="userNameInput" TextWrapping="Wrap" Canvas.Top="270" Width="199" HorizontalAlignment="Center" VerticalAlignment="Center" Height="51" RenderTransformOrigin="0.577,-0.284" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
        <Label Content="Password:" x:Name="password"  Canvas.Left="335" Canvas.Top="375" FontSize="40" Height="68" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <TextBox Canvas.Left="581" x:Name="passwordInput" TextWrapping="Wrap"  Canvas.Top="384" Width="199" Height="50" RenderTransformOrigin="0.577,-0.284" HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Button Content="clear" x:Name="clear" Canvas.Left="392" Canvas.Top="533" Height="50" Width="100" HorizontalAlignment="Center" VerticalAlignment="Center" Click="clear_Click"/>
        <Button Content="Submit" x:Name="submit" Canvas.Left="600" Canvas.Top="533" Height="50" Width="100" HorizontalAlignment="Left" VerticalAlignment="Center" RenderTransformOrigin="0.967,0.516" Click="submit_Click"/>
        <Label Canvas.Left="395" Content="error lable"  Canvas.Top="462" Width="305" Height="43" HorizontalAlignment="Left" VerticalAlignment="Center" HorizontalContentAlignment="Center" x:Name="errorLable" Visibility="Hidden" Foreground="Red" FontSize="20"/>

    </Canvas>
</UserControl>
