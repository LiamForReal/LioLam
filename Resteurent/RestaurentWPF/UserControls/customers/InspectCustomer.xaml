<Window x:Class="RestaurantWindowsPF.UserControls.InspectCustomer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="InspectCustomer" Height="550" Width="900"
        ResizeMode="NoResize"
        Background="#FF22243D">
    <Canvas>

        <!-- Title -->
        <TextBlock Text="Customer Details"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="#FFE0E0E0"
                   Canvas.Left="30" Canvas.Top="20"/>

        <!-- Image -->
        <Border Width="140" Height="140" BorderBrush="#FFE0E0E0" BorderThickness="2" CornerRadius="8"
                Canvas.Left="700" Canvas.Top="30">
            <Image x:Name="CustomerImage" Source="{Binding CustomerImage}" Stretch="UniformToFill"/>
        </Border>

        <!-- User Name -->
        <TextBlock Text="User Name:" Foreground="#FFE0E0E0" FontSize="16" Canvas.Left="30" Canvas.Top="90"/>
        <TextBlock x:Name="CustomerUserName" Text="{Binding CustomerUserName}" Width="250" Height="30" Canvas.Left="150" Canvas.Top="85"
                 Background="#FF102840" Foreground="#FFE0E0E0"/>

        <!-- Password -->

        <!-- Phone -->
        <TextBlock Text="Phone:" Foreground="#FFE0E0E0" FontSize="16" Canvas.Left="30" Canvas.Top="149" RenderTransformOrigin="0.3,0.636" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <TextBlock x:Name="CustomerPhone" Text="{Binding CustomerPhone}" Width="250" Height="30" Canvas.Left="142" Canvas.Top="140"
                 Background="#FF102840" Foreground="#FFE0E0E0" HorizontalAlignment="Center" VerticalAlignment="Top" />

        <!-- Email -->
        <TextBlock Text="Email:" Foreground="#FFE0E0E0" FontSize="16" Canvas.Left="30" Canvas.Top="218" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <TextBlock x:Name="CustomerMail" Text="{Binding CustomerMail}" Width="250" Height="30" Canvas.Left="150" Canvas.Top="209"
                 Background="#FF102840" Foreground="#FFE0E0E0" HorizontalAlignment="Center" VerticalAlignment="Top"/>

        <!-- Address Section -->
        <TextBlock Text="Location:" FontSize="20" FontWeight="Bold" Foreground="#FFE0E0E0"
                   Canvas.Left="30" Canvas.Top="300"/>

        <!-- House Number -->
        <TextBlock Text="House No.:" Foreground="#FFE0E0E0" FontSize="16" Canvas.Left="30" Canvas.Top="340"/>
        <TextBlock x:Name="CustomerHouse" Text="{Binding CustomerHouse}" Width="100" Height="30" Canvas.Left="150" Canvas.Top="335"
                 Background="#FF102840" Foreground="#FFE0E0E0"/>

        <!-- Street -->
        <TextBlock Text="Street:" Foreground="#FFE0E0E0" FontSize="16" Canvas.Left="30" Canvas.Top="390"/>
        <TextBlock x:Name="CustomerStreet" Width="250" Height="30" Canvas.Left="150" Canvas.Top="385"
                 Background="#FF102840" Foreground="#FFE0E0E0"/>

        <!-- City -->
        <TextBlock Text="City:" Foreground="#FFE0E0E0" FontSize="16" Canvas.Left="30" Canvas.Top="440"/>
        <TextBlock x:Name="CustomerCity" Width="250" Height="30" Canvas.Left="150" Canvas.Top="435"
                 Background="#FF102840" Foreground="#FFE0E0E0"/>

        <!-- Return Button -->
        <Button Content="Back"
                Width="100" Height="35"
                Canvas.Left="770" Canvas.Top="451"
                Background="Transparent" 
                Foreground="White"
                FontWeight="Bold"
                FontSize="16"
                BorderBrush="White"
                BorderThickness="1"
                Click="BackButton_Click"/>
    </Canvas>
</Window>
