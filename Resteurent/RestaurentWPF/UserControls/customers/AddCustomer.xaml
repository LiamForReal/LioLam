<Window x:Class="RestaurantWindowsPF.UserControls.AddCustomer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RestaurantWindowsPF.UserControls"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="AddCustomer" Height="550" Width="900"
        Background="#FF22243D">
    <Canvas>

        <!-- Title -->
        <TextBlock Text="Add New Customer"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="#FFE0E0E0"
                   Canvas.Left="30" Canvas.Top="20"/>

        <!-- Image -->
        <Border Width="140" Height="140" BorderBrush="#FFE0E0E0" BorderThickness="2" CornerRadius="8"
                Canvas.Left="700" Canvas.Top="30">
            <Image x:Name="imgRenderer" Stretch="UniformToFill"/>
        </Border>

        <!-- Id -->
        <TextBlock Text="Id:" Foreground="#FFE0E0E0" FontSize="16" Canvas.Left="30" Canvas.Top="70" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <TextBox Name="Id" Width="250" Height="30" Canvas.Left="150" Canvas.Top="66"
          Background="#FF102840" Foreground="#FFE0E0E0" BorderBrush="#FF3A5F87" HorizontalAlignment="Center" VerticalAlignment="Top"/>

        <!-- Username -->
        <TextBlock Text="Username:" Foreground="#FFE0E0E0" FontSize="16" Canvas.Left="28" Canvas.Top="116"/>
        <TextBox Name="CustomerUsername" Width="250" Height="30" Canvas.Left="150" Canvas.Top="112"
                 Background="#FF102840" Foreground="#FFE0E0E0" BorderBrush="#FF3A5F87" HorizontalAlignment="Center" VerticalAlignment="Top"/>

        <!-- Password -->
        <TextBlock Text="Password:" Foreground="#FFE0E0E0" FontSize="16" Canvas.Left="30" Canvas.Top="166" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <TextBox Name="CustomerPassword" Width="250" Height="30" Canvas.Left="150" Canvas.Top="162"
                     Background="#FF102840" Foreground="#FFE0E0E0" BorderBrush="#FF3A5F87" HorizontalAlignment="Center" VerticalAlignment="Top"/>

        <!-- Phone -->
        <TextBlock Text="Phone:" Foreground="#FFE0E0E0" FontSize="16" Canvas.Left="30" Canvas.Top="218" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <TextBox Name="CustomerPhone" Width="250" Height="30" Canvas.Left="150" Canvas.Top="214"
                 Background="#FF102840" Foreground="#FFE0E0E0" BorderBrush="#FF3A5F87" HorizontalAlignment="Center" VerticalAlignment="Top"/>

        <!-- Email -->
        <TextBlock Text="Mail:" Foreground="#FFE0E0E0" FontSize="16" Canvas.Left="30" Canvas.Top="265"/>
        <TextBox Name="CustomerMail" Width="250" Height="30" Canvas.Left="150" Canvas.Top="261"
                 Background="#FF102840" Foreground="#FFE0E0E0" BorderBrush="#FF3A5F87" HorizontalAlignment="Center" VerticalAlignment="Top"/>

        <!-- Address Section -->
        <TextBlock Text="Location:" FontSize="20" FontWeight="Bold" Foreground="#FFE0E0E0"
                   Canvas.Left="30" Canvas.Top="300"/>

        <!-- House Number -->
        <TextBlock Text="House No.:" Foreground="#FFE0E0E0" FontSize="16" Canvas.Left="30" Canvas.Top="340"/>
        <TextBox Name="CustomerHouse" Width="100" Height="30" Canvas.Left="150" Canvas.Top="335"
                 Background="#FF102840" Foreground="#FFE0E0E0" BorderBrush="#FF3A5F87"/>

        <!-- Street -->
        <TextBlock Text="Street:" Foreground="#FFE0E0E0" FontSize="16" Canvas.Left="30" Canvas.Top="390"/>
        <ComboBox x:Name="StreetComboBox" Canvas.Left="150" Canvas.Top="386" Background="#FF102840" Foreground="Black" Width="200" Height="30" FontSize="14" DisplayMemberPath="StreetName" SelectedValuePath="Id" BorderBrush="Gold" HorizontalAlignment="Center" VerticalAlignment="Top"/>

        <!-- City -->
        <TextBlock Text="City:" Foreground="#FFE0E0E0" FontSize="16" Canvas.Left="30" Canvas.Top="440"/>
        <ComboBox x:Name="CityComboBox" Canvas.Left="150" Canvas.Top="439" Background="#FF102840" Foreground="black" Width="200" Height="30" FontSize="14" DisplayMemberPath="CityName" SelectedValuePath="Id"  BorderBrush="Gold" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <Button x:Name="picktureInput" Background="Transparent" Foreground="White" FontWeight="Bold" FontSize="12" BorderBrush="White" BorderThickness="1" Height="33" Width="120" Canvas.Left="710" Canvas.Top="206" HorizontalAlignment="Left" VerticalAlignment="Top" Content="Add Picture" Click="picktureInput_Click"/>

        <!-- Error Label -->
        <Label x:Name="errorLable" Content="" Canvas.Left="275" Canvas.Top="469" Width="400" FontSize="18"
        Foreground="Red" HorizontalContentAlignment="Center"/>

        <!-- Update Button -->
        <Button Content="Create" Tag="{Binding Id}"
                Width="150" Height="43"
                Canvas.Left="695" Canvas.Top="439"
                Background="Transparent" 
                Foreground="White" 
                FontWeight="Bold" 
                FontSize="16" 
                BorderBrush="White" 
                BorderThickness="1" 
                Click="createButton_Click"/>
    </Canvas>
</Window>
