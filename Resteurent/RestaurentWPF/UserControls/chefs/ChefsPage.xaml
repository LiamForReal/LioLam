<UserControl x:Class="RestaurantWindowsPF.UserControls.ChefsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RestaurantWindowsPF.UserControls"
             mc:Ignorable="d" 
             Width="1100" Height="750" Background="#FF22243D">
    <Canvas>
        <TextBlock Text="Chefs" Canvas.Left="100" Canvas.Top="10" FontSize="30" Foreground="White" FontWeight="Bold" />

        <ListView x:Name="listView" Background="#5DADEC" Height="550" Width="900" Canvas.Left="100" Canvas.Top="50"
                  BorderBrush="White" BorderThickness="1">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Background="#E6F2FF" CornerRadius="10" Margin="5" Padding="10">
                        <StackPanel Orientation="Horizontal" Width="860">
                            <Image x:Name="chefImage" Source="{Binding ChefImage}" Width="60" Height="60" Margin="10"/>
                            <Label x:Name="chefFirstName" Content="{Binding ChefFirstName}" FontSize="22" FontWeight="SemiBold" VerticalAlignment="Center" Margin="20,0"/>
                            <Label x:Name="chefLastName" Content="{Binding ChefLastName}" FontSize="22" FontWeight="SemiBold" VerticalAlignment="Center" Margin="20,0"/>
                            

                            <Button x:Name="updateChef" Content="Update" Tag="{Binding Id}" Width="70" Height="40" Margin="60,0" Click="updateChef_Click" 
                                    HorizontalAlignment="Center" VerticalAlignment="Center" Background="#FF5DADEC" Foreground="White" FontWeight="Bold" FontSize="16" BorderBrush="White" BorderThickness="1"/>
                            <Button x:Name="deleteChef" Content="Delete" Tag="{Binding Id}" Width="70" Height="40" Margin="10,0" Click="deleteChef_Click" 
                                    HorizontalAlignment="Center" VerticalAlignment="Center" Background="#FF5DADEC" Foreground="White" FontWeight="Bold" FontSize="16" BorderBrush="White" BorderThickness="1"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button Content="Add new chef" x:Name="addNewChef" Canvas.Left="450" Canvas.Top="619" Height="50" Width="200"
                HorizontalAlignment="Center" VerticalAlignment="Center"
                Background="Transparent" Foreground="White" FontWeight="Bold" FontSize="16" BorderBrush="White" BorderThickness="1" Click="addNewChef_Click"/>
    </Canvas>
</UserControl>
