<Window x:Class="RestaurantWindowsPF.UserControls.UpdateChef"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RestaurantWindowsPF.UserControls"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="UpdateChef" Height="600" Width="800">
    <Canvas Background="#FF22243D">
        <Label Content="Update Chef" Canvas.Left="318" Canvas.Top="35" FontSize="28" FontWeight="Bold" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Top"/>

        <!-- Chef First Name -->
        <Label Content="First Name:" Canvas.Left="68" Canvas.Top="181" FontSize="18" Foreground="White"/>
        <TextBox x:Name="firstNameTextBox" Background="#FF22243D" Text="{Binding ChefFirstName}" FontSize="18" Canvas.Left="255" Canvas.Top="192" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150"/>

        <!-- Chef Last Name -->
        <Label Content="Last Name:" FontSize="18" Canvas.Left="68" Canvas.Top="281" Foreground="White"/>
        <TextBox x:Name="lastNameTextBox" Background="#FF22243D" Text="{Binding ChefLastName}" FontSize="18" Canvas.Left="257" Canvas.Top="292" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Top" Width="148"/>

        <!-- Chef Image -->
        <Button x:Name="picktureInput" Background="#FF5DADEC" Foreground="White" FontWeight="Bold" FontSize="16" BorderBrush="White" BorderThickness="1" Height="33" Width="120" Canvas.Left="549" Canvas.Top="415" HorizontalAlignment="Left" VerticalAlignment="Center" Content="Add Picture" Click="picktureInput_Click"/>
        <Image x:Name="imgRenderer" Source="{Binding ChefImage}" Height="198" Width="220"
               Canvas.Left="499" Canvas.Top="154" Stretch="UniformToFill"/>

        <Button Content="Update" x:Name="updateButton" Tag="{Binding Id}" Canvas.Left="274" Canvas.Top="490" Width="200" Height="60" HorizontalAlignment="Left" VerticalAlignment="Top"
            Background="#FF5DADEC" Foreground="White" FontWeight="Bold" FontSize="16" BorderBrush="White" BorderThickness="1" Click="updateButton_Click"/>

        <Label x:Name="errorLable" Content="" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Canvas.Left="218" FontSize="18" Foreground="red" Canvas.Top="422" Width="312" Height="38"/>
    </Canvas>
</Window>
