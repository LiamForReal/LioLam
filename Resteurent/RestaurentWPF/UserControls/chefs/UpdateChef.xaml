<Window x:Class="RestaurantWindowsPF.UserControls.UpdateChef"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RestaurantWindowsPF.UserControls"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="UpdateChef" Height="400" Width="700">
    <Canvas Background="#4A90E2">
        <Label Content="update chef" Canvas.Left="235" Canvas.Top="29" FontSize="28" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Top"/>

        <!-- Chef First Name -->
        <Label Content="First Name:" Canvas.Left="66" Canvas.Top="110" FontSize="18" Foreground="White" RenderTransformOrigin="0.432,0.433"/>
        <TextBox x:Name="firstNameTextBox" Background="#4A90E2" Text="{Binding ChefFirstName}" FontSize="18" Canvas.Left="218" Canvas.Top="118" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150"/>

        <!-- Chef Last Name -->
        <Label Content="Last Name:" FontSize="18" Canvas.Left="66"  Canvas.Top="192" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <TextBox x:Name="lastNameTextBox" Background="#4A90E2" Text="{Binding ChefLastName}" FontSize="18" Canvas.Left="220" Canvas.Top="200" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Top" Width="148"/>


        <!-- Chef Image -->
        <Button x:Name="picktureInput" Background="#FF5DADEC" Foreground="White" FontWeight="Bold" FontSize="16" BorderBrush="White" BorderThickness="1" Height="33" Width="120" Canvas.Left="493" Canvas.Top="279" HorizontalAlignment="Left" VerticalAlignment="Center" Content="Add Pickture" RenderTransformOrigin="0.317,0.895" Click="picktureInput_Click"></Button>
        <Image x:Name="imgRenderer" Source="{Binding ChefImage}" Height="150" Canvas.Left="465" Canvas.Top="110" Width="182" Stretch="UniformToFill" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Button Content="Update" x:Name="updateButton" Tag="{Binding Id}" Canvas.Left="218" Canvas.Top="296" Width="200" Height="60" HorizontalAlignment="Left" VerticalAlignment="Top"
            Background="#FF5DADEC" Foreground="White" FontWeight="Bold" FontSize="16" BorderBrush="White" BorderThickness="1" Click="updateButton_Click"/>
        <Label  x:Name="errorLable" Content="" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"  Canvas.Left="153" FontSize="18" Foreground="red" Canvas.Top="253" HorizontalAlignment="Center" VerticalAlignment="Top" Width="312" Height="38"/>
    </Canvas>
</Window>
