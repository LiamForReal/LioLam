<Window x:Class="RestaurantWindowsPF.UserControls.AddChef" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RestaurantWindowsPF.UserControls"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="AddChef" Height="600" Width="800">
    <Canvas Background="#FF22243D">
        <Label Content="Add New Chef" Canvas.Left="300" Canvas.Top="58" FontSize="28" FontWeight="Bold" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Top"/>

        <!-- Chef First Name -->
        <Label Content="First Name:" Canvas.Left="91" Canvas.Top="182" FontSize="18" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox x:Name="firstNameTextBox" Background="#FF22243D" FontSize="18" Canvas.Left="300" Canvas.Top="186" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Top" Width="150"/>

        <!-- Chef Last Name -->
        <Label Content="Last Name:" FontSize="18" Canvas.Left="93" Canvas.Top="288" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox x:Name="lastNameTextBox" Background="#FF22243D" FontSize="18" Canvas.Left="302" Canvas.Top="292" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Top" Width="148"/>

        <!-- Chef Image -->
        <Button x:Name="picktureInput" Background="Transparent" Foreground="White" FontWeight="Bold" FontSize="12" BorderBrush="White" BorderThickness="1" Height="33" Width="120" Canvas.Left="586" Canvas.Top="418" HorizontalAlignment="Left" VerticalAlignment="Top" Content="Add Picture" Click="picktureInput_Click"/>
        <Image x:Name="imgRenderer" Source="{Binding ChefImage}"  Height="199" Width="220"
               Canvas.Left="536" Canvas.Top="160" Stretch="UniformToFill"/>

        <Button Content="Create" x:Name="createButton" Tag="{Binding Id}" Canvas.Left="275" Canvas.Top="475" Width="200" Height="60" HorizontalAlignment="Left" VerticalAlignment="Top"
            Background="Transparent" BorderBrush="White" BorderThickness="1" Foreground="White" FontWeight="Bold" Click="createButton_Click"/>

        <Label x:Name="errorLable" Content="" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Canvas.Left="219" FontSize="18" Foreground="red" Canvas.Top="413" Width="312" Height="38" HorizontalAlignment="Left" VerticalAlignment="Top"/>
    </Canvas>
</Window>
