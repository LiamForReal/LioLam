<Window x:Class="RestaurantWindowsPF.UserControls.UpdateDish"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RestaurantWindowsPF.UserControls"
        mc:Ignorable="d"
        Height="600" Width="800"
        ResizeMode="NoResize"
        Title="Update Dish">
    <Canvas Background="#FF22243D">

        <!-- Title -->
        <Label Content="Update Dish" Canvas.Left="310" Canvas.Top="20" FontSize="28" FontWeight="Bold" Foreground="White"/>

        <!-- Dish Name -->
        <Label Content="Name:" Canvas.Left="60" Canvas.Top="90" FontSize="18" Foreground="White"/>
        <TextBox x:Name="nameTextBox" Text="{Binding DishName}" FontSize="18" 
                 Canvas.Left="180" Canvas.Top="90" Width="200"
                 Background="#FF2A2E4A" Foreground="White" BorderBrush="#FF5DADEC" BorderThickness="1"/>

        <!-- Price -->
        <Label Content="Price:" Canvas.Left="60" Canvas.Top="135" FontSize="18" Foreground="White"/>
        <TextBox x:Name="priceTextBox" FontSize="18" Canvas.Left="180" Canvas.Top="135" Width="200"
                 Background="#FF2A2E4A" Foreground="White" BorderBrush="#FF5DADEC" BorderThickness="1"/>

        <!-- Description -->
        <Label Content="Description:" Canvas.Left="60" Canvas.Top="180" FontSize="18" Foreground="White"/>
        <TextBox x:Name="descriptionTextBox" Text="{Binding DishDescription}" TextWrapping="Wrap"
                 FontSize="16" Canvas.Left="180" Canvas.Top="180" Height="100" Width="300"
                 Background="#FF2A2E4A" Foreground="White" BorderBrush="#FF5DADEC" BorderThickness="1"/>

        <!-- Dish Image -->
        <Image x:Name="imgRenderer" Source="{Binding DishImage}" Height="199" Width="220"
               Canvas.Left="525" Canvas.Top="90" Stretch="UniformToFill" />

        <Button x:Name="picktureInput" Background="Transparent" Foreground="White" FontWeight="Bold" FontSize="12" BorderBrush="White" BorderThickness="1" Height="33" Width="120" Canvas.Left="635" Canvas.Top="357" HorizontalAlignment="Center" VerticalAlignment="Top" Content="Add Picture" Click="picktureInput_Click"/>

        <!-- Types -->
        <Label Content="Types:" Canvas.Left="60" Canvas.Top="300" FontSize="18" Foreground="White"/>
        <ListBox x:Name="types" SelectionMode="Multiple" Canvas.Left="60" Canvas.Top="330" Width="180" Height="120"
                 Background="#FF22243D" BorderThickness="0">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Label FontSize="16" Content="{Binding TypeName}" Foreground="White" Padding="10,5"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Chefs -->
        <Label Content="Chefs:" Canvas.Left="270" Canvas.Top="300" FontSize="18" Foreground="White"/>
        <ListBox x:Name="chefs" SelectionMode="Multiple" Canvas.Left="270" Canvas.Top="330" Width="330" Height="120"
                 Background="#FF22243D" BorderThickness="0">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <Label FontSize="16" Content="{Binding ChefFirstName}" Foreground="White"/>
                        <Label FontSize="16" Content="{Binding ChefLastName}" Foreground="White" Margin="10,0,0,0"/>
                        <Image Source="{Binding ChefImage}" Width="50" Height="50" Margin="10,0,0,0"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Update Button -->
        <Button x:Name="updateButton" Tag="{Binding Id}" Content="Update" Canvas.Left="300" Canvas.Top="480" Width="200" Height="50"
                Background="Transparent" Foreground="White" FontWeight="Bold" FontSize="16" BorderBrush="White" BorderThickness="1"  Click="updateButton_Click"/>

        <!-- Error Label -->
        <Label x:Name="errorLable" Content="" Canvas.Left="200" Canvas.Top="450" Width="400" FontSize="18"
               Foreground="Red" HorizontalContentAlignment="Center"/>
    </Canvas>
</Window>
