<Window x:Class="RestaurantWPF.UserControls.InspactDish"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:RestaurantWPF.UserControls"
        mc:Ignorable="d"
        Height="600" Width="800"
        ResizeMode="NoResize"
        Title="inspactDishPage">
    <Canvas Background="#4A90E2">
        <Label Content="Dish Details" Canvas.Left="300" Canvas.Top="20" FontSize="28" FontWeight="Bold" Foreground="White"/>

        <!-- Dish Name -->
        <Label Content="Name:" Canvas.Left="55" Canvas.Top="90" FontSize="18" Foreground="White"/>
        <Label Content="{Binding DishName}" FontSize="18" Canvas.Left="150" Canvas.Top="90" Foreground="White"/>

        <!-- Price -->
        <Label Content="Price:" FontSize="18" Canvas.Left="55" Canvas.Top="135" Foreground="White"/>
        <Label x:Name="priceLable" FontSize="18" Canvas.Left="152" Canvas.Top="135" Foreground="White"/>

        <!-- Description -->
        <Label Content="Description:" FontSize="18" Canvas.Left="55" Canvas.Top="180" Foreground="White"/>
        <TextBlock Text="{Binding  DishDescription}" TextWrapping="Wrap" FontSize="16" Canvas.Left="175" Canvas.Top="180"
                   Height="91" Width="297" Foreground="White"/>

        <!-- Types -->
        <Label Content="Types:" FontSize="18" Canvas.Left="108" Canvas.Top="321" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Top" RenderTransformOrigin="0.829,0.512"/>
        <ListView x:Name="types" Background="#FF5DADEC" Canvas.Left="55" Canvas.Top="378" Width="165" Height="120"
              ItemsSource="{Binding types}" BorderThickness="0" HorizontalAlignment="Center" VerticalAlignment="Top" RenderTransformOrigin="-0.734,1.642">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Width="auto" Height="55">
                        <Label Margin="10" FontSize="18" Content="{Binding TypeName}" Foreground="White"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <!-- Chefs -->
        <Label Content="Chefs:" FontSize="18" Canvas.Left="354" Canvas.Top="321" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.233,0.517"/>
        <ListView x:Name="chefs" Background="#FF5DADEC" Canvas.Left="252" Canvas.Top="378" Width="262" Height="120"
                      ItemsSource="{Binding chefs}" BorderThickness="0" HorizontalAlignment="Left" VerticalAlignment="Top">

            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Width="auto" Height="55">
                        <Label Margin="15,0,0,10" FontSize="18" Content="{Binding ChefFirstName}" Foreground="White"/>
                        <Label Margin="15,0,0,10" FontSize="18" Content="{Binding ChefLastName}" Foreground="White"/>
                        <Image Margin="40,0,0,10" Source="{Binding ChefImage}" Width="60"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>


        <!-- Dish Image -->
        <Image Source="{Binding DishImage}" Height="231" Canvas.Left="508" Canvas.Top="81" Width="220" Stretch="UniformToFill" HorizontalAlignment="Left" VerticalAlignment="Top"/>
    </Canvas>
</Window>
