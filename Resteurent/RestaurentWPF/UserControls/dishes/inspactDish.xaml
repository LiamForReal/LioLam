<Window x:Class="RestaurantWPF.UserControls.inspactDish"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:RestaurantWPF.UserControls"
        mc:Ignorable="d"
        Height="600" Width="800"
        ResizeMode="NoResize"
        Title="inspactDishPage">
    <Canvas Background="#4A90E2">
        <Label Content="Dish Details" Canvas.Left="300" Canvas.Top="20" FontSize="28" FontWeight="Bold" Foreground="White"/>

        <!-- Dish Name -->
        <Label Content="Name:" Canvas.Left="55" Canvas.Top="90" FontSize="18" Foreground="White"/>
        <Label Content="{Binding DishName}" FontSize="18" Canvas.Left="150" Canvas.Top="90" Foreground="White"/>

        <!-- Price -->
        <Label Content="Price:" FontSize="18" Canvas.Left="55" Canvas.Top="135" Foreground="White"/>
        <Label x:Name="priceLable" Content="{Binding DishPrice}" FontSize="18" Canvas.Left="152" Canvas.Top="135" Foreground="White"/>

        <!-- Description -->
        <Label Content="Description:" FontSize="18" Canvas.Left="55" Canvas.Top="180" Foreground="White"/>
        <TextBlock Text="{Binding  DishDescription}" TextWrapping="Wrap" FontSize="16" Canvas.Left="175" Canvas.Top="180"
                   Height="91" Width="297" Foreground="White"/>

        <!-- Types -->
        <Label Content="Types:" FontSize="18" Canvas.Left="55" Canvas.Top="300" Foreground="White"/>
        <Label x:Name="typesLable" Content="tmp,tmp2" FontSize="18" Canvas.Left="150" Canvas.Top="300" Width="252"
               Foreground="White"/>

        <!-- Chefs -->
        <Label Content="Chefs:" FontSize="18" Canvas.Left="55" Canvas.Top="350" Foreground="White"/>
        <ListView x:Name="listView" Background="White" Canvas.Left="150" Canvas.Top="350" Width="398" Height="150"
                  ItemsSource="{Binding chefs}" BorderThickness="0">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Width="150">
                        <Label Margin="10" FontSize="18" Content="{Binding ChefFirstName}"/>
                        <Label Margin="10" FontSize="18" Content="{Binding ChefLastName}"/>
                        <Image Margin="10" Source="{Binding ChefImage}" Width="60"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Dish Image -->
        <Image Source="{Binding DishImage}" Height="231" Canvas.Left="508" Canvas.Top="81" Width="220" Stretch="UniformToFill" HorizontalAlignment="Left" VerticalAlignment="Top"/>
    </Canvas>
</Window>
