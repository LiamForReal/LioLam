<Window x:Class="RestaurantWPF.UserControls.dishDetailsPage" 
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RestaurantWPF.UserControls"
      mc:Ignorable="d" 
      Height="600" Width="800"
      ResizeMode="NoResize"
      Title="dishDetailsPage">
    <Canvas Height="600" Width="800" Background="#4A90E2">
        <Label Content="Dish Details" Canvas.Left="314" FontSize="30" Canvas.Top="34" HorizontalAlignment="Left" VerticalAlignment="Top" Width="172"/>
        <Label Content="Name: " Canvas.Left="55" FontSize="18"  Canvas.Top="109" HorizontalAlignment="Left" VerticalAlignment="Top" Width="115" RenderTransformOrigin="0.517,0.143"/>
        <Label Content="{Binding DishName}" FontSize="18" Canvas.Left="150" Canvas.Top="109" HorizontalAlignment="Left" VerticalAlignment="Center" Height="40" Width="201" RenderTransformOrigin="0.523,1.692"/>
        <Label Content="Price: " FontSize="18" Canvas.Left="55" Canvas.Top="162" Width="92" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Label x:Name="priceLable" Content="{Binding DishPrice}" FontSize="18" Canvas.Left="152" Canvas.Top="162" Width="200" HorizontalAlignment="Left" VerticalAlignment="Center" Height="40"/>
        <Label Content="Description: " FontSize="18" Canvas.Left="55" Canvas.Top="217" RenderTransformOrigin="-0.01,1.25" Height="34" Width="115" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Label Content="{Binding  DishDescription}" FontSize="18" Canvas.Left="175" Canvas.Top="217" RenderTransformOrigin="-0.01,1.25" Height="91" Width="297" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Label Content="Chefs:" FontSize="18" Canvas.Left="55" Canvas.Top="384" RenderTransformOrigin="-0.01,1.25" Height="34" Width="64" HorizontalAlignment="Center" VerticalAlignment="Top"/>

        <ListView x:Name="listView" Background="#4A90E2" Height="150" Width="398" HorizontalAlignment="Center" Canvas.Left="150" VerticalAlignment="Top" ItemsSource="{Binding chefs}" Canvas.Top="384">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Width="150">
                        <Label Margin="10" FontSize="18" Content="{Binding ChefFirstName}"></Label>
                        <Label Margin="10" FontSize="18" Content="{Binding ChefLastName}"></Label>
                        <Image Margin="10" Source="{Binding ChefImage}" Width="60" Height="auto"></Image>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Label Content="Types:" FontSize="18" Canvas.Left="55" Canvas.Top="339" RenderTransformOrigin="-0.01,1.25" HorizontalAlignment="Center" Height="36" VerticalAlignment="Top" Width="64"/>
        <Label x:Name="typesLable" Content="tmp,tmp2" FontSize="18" Canvas.Left="150" Canvas.Top="339" Width="252" HorizontalAlignment="Left" VerticalAlignment="Center" Height="40"/>
        <Image Source="{Binding DishImage}" Height="274" Canvas.Left="486" Canvas.Top="109" Width="250" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.501,0.524"/>
    </Canvas>
</Window>
