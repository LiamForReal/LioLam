<Window x:Class="RestaurantWPF.UserControls.InspectDish"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:RestaurantWPF.UserControls"
        mc:Ignorable="d"
        Height="600" Width="800"
        ResizeMode="NoResize"
        Title="Inspect Dish">
    <Canvas Background="#FF22243D">

        <!-- Title -->
        <Label Content="Dish Details" Canvas.Left="310" Canvas.Top="20" FontSize="28" FontWeight="Bold" Foreground="White"/>

        <!-- Dish Name -->
        <Label Content="Name:" Canvas.Left="60" Canvas.Top="90" FontSize="18" Foreground="White"/>
        <Label Content="{Binding DishName}" FontSize="18" Canvas.Left="180" Canvas.Top="90" Foreground="White"/>

        <!-- Price -->
        <Label Content="Price:" FontSize="18" Canvas.Left="60" Canvas.Top="130" Foreground="White"/>
        <Label x:Name="priceLable" FontSize="18" Canvas.Left="180" Canvas.Top="130" Foreground="White"/>

        <!-- Description -->
        <Label Content="Description:" FontSize="18" Canvas.Left="60" Canvas.Top="170" Foreground="White"/>
        <TextBlock Text="{Binding DishDescription}" TextWrapping="Wrap" FontSize="16"
                   Canvas.Left="180" Canvas.Top="170" Height="100" Width="280" Foreground="White"/>

        <!-- Dish Image -->
        <Image Source="{Binding DishImage}" Width="200" Height="200"
               Canvas.Left="520" Canvas.Top="90" Stretch="UniformToFill" />

        <!-- Types -->
        <Label Content="Types:" FontSize="18" Canvas.Left="60" Canvas.Top="300" Foreground="White"/>
        <ListView x:Name="types" Background="#FF5DADEC" Canvas.Left="60" Canvas.Top="330" Width="180" Height="120"
                  ItemsSource="{Binding types}" BorderThickness="0">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Label FontSize="16" Content="{Binding TypeName}" Foreground="White" Padding="10,5"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Chefs -->
        <Label Content="Chefs:" FontSize="18" Canvas.Left="270" Canvas.Top="300" Foreground="White"/>
        <ListView x:Name="chefs" Background="#FF5DADEC" Canvas.Left="270" Canvas.Top="330" Width="330" Height="120"
                  ItemsSource="{Binding chefs}" BorderThickness="0">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <Label FontSize="16" Content="{Binding ChefFirstName}" Foreground="White"/>
                        <Label FontSize="16" Content="{Binding ChefLastName}" Foreground="White" Margin="10,0,0,0"/>
                        <Image Source="{Binding ChefImage}" Width="50" Height="50" Margin="10,0,0,0"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Back Button -->
        <Button Content="Back" Canvas.Left="353" Canvas.Top="503" Width="80" Height="35"
          Background="#FF5DADEC" Foreground="White" FontWeight="Bold" Click="BackButton_Click"/>
    </Canvas>
</Window>
