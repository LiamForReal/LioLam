<Window x:Class="RestaurantWindowsPF.UserControls.addDish"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RestaurantWindowsPF.UserControls"
        mc:Ignorable="d"
        Title="addDish"
        Height="600" Width="800"
        ResizeMode="NoResize">
    <Canvas Background="#4A90E2">
        <Label Content="add new dish" Canvas.Left="300" Canvas.Top="20" FontSize="28" FontWeight="Bold" Foreground="White"/>

        <!-- Dish Name -->
        <Label Content="Name:" Canvas.Left="55" Canvas.Top="90" FontSize="18" Foreground="White"/>
        <TextBox x:Name="nameTextBox" Background="#4A90E2" Text="{Binding DishName}" FontSize="18" Canvas.Left="150" Canvas.Top="90" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Center" Width="150"/>

        <!-- Price -->
        <Label Content="Price:" FontSize="18" Canvas.Left="55" Canvas.Top="135" Foreground="White"/>
        <TextBox x:Name="priceTextBox" Background="#4A90E2" Text="{Binding DishPrice}" FontSize="18" Canvas.Left="152" Canvas.Top="135" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" Width="148"/>

        <!-- Description -->
        <Label Content="Description:" FontSize="18" Canvas.Left="55" Canvas.Top="180" Foreground="White"/>
        <TextBox x:Name="descriptionTextBox" Background="#4A90E2" Text="{Binding  DishDescription}" TextWrapping="Wrap" FontSize="16" Canvas.Left="175" Canvas.Top="180"
                   Height="91" Width="297" Foreground="White"/>

        <!-- Types -->
        <Label Content="Types:" FontSize="18" Canvas.Left="55" Canvas.Top="300" Foreground="White"/>
        <Label x:Name="typesLable" Content="tmp,tmp2" FontSize="18" Canvas.Left="150" Canvas.Top="300" Width="252"
                   Foreground="White"/>

        <!-- Chefs -->
        <Label Content="Chefs:" FontSize="18" Canvas.Left="55" Canvas.Top="350" Foreground="White"/>
        <ListView x:Name="listView" Background="#FF5DADEC" Canvas.Left="150" Canvas.Top="350" Width="398" Height="120"
                      ItemsSource="{Binding chefs}" BorderThickness="0" HorizontalAlignment="Center" VerticalAlignment="Top">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Width="150">
                        <Label Margin="10" FontSize="18" Content="{Binding ChefFirstName}"/>
                        <Label Margin="10" FontSize="18" Content="{Binding ChefLastName}"/>
                        <Image Margin="10" Source="{Binding ChefImage}" Width="60"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Dish Image -->
        <Button x:Name="picktureInput" Height="33" Width="93" Canvas.Left="430" Canvas.Top="74" HorizontalAlignment="Left" VerticalAlignment="Center" Content="EnterPickture"></Button>
        <Image x:Name="imgRenderer" Source="{Binding DishImage}" Height="231" Canvas.Left="536" Canvas.Top="90" Width="220" Stretch="UniformToFill" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Button Content="Create" x:Name="createButton" Canvas.Left="282" Canvas.Top="494" Width="200" Height="60" HorizontalAlignment="Center" VerticalAlignment="Top"
                Background="#FF5DADEC" Foreground="White" FontWeight="Bold" FontSize="16" BorderBrush="White" BorderThickness="1" Click="updateButton_Click"/>
    </Canvas>
</Window>
